{
  "name": "nitrogen",
  "version": "1.0.0",
  "keywords": [
    "javascript",
    "gulp 4",
    "nunjucks",
    "webpack",
    "tailwindcss"
  ],
  "homepage": "https://github.com/garpunkal/Nitrogen",
  "repository": {
    "type": "git",
    "url": "git@github.com:/garpunkal/Nitrogen.git"
  },
  "license": "MIT",
  "author": "garpunkal@gmail.com",
  "main": "gulpfile.js",
  "scripts": {
    "build": "gulp build --minified --purge --compress",
    "migrate": "gulp migrate --minified --purge --compress",
    "prettier": "prettier --write \"./src/**/*.{scss,js,jsx,json}\"",
    "start": "gulp --sourcemaps --compress"
  },
  "browserslist": [
    "> 1%",
    "IE >= 11"
  ],
  "prettier": {
    "tabWidth": 2
  },
  "dependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "autoprefixer": "^9.8.6",
    "bootstrap": "^4.5.2",
    "css-loader": "^4.2.1",
    "gulp-purgecss": "^2.3.0",
    "jquery": "^3.5.1",
    "node-sass": "^4.14.1",
    "popper.js": "^1.16.1",
    "precss": "^4.0.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-nunjucks": "^5.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-util": "^3.0.8",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "require-dir": "^1.2.0",
    "sass-loader": "^9.0.3",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-stream": "^5.2.1"
  },
  "paths": {
    "base": "./src/",
    "build": "./_build/",
    "dist": "./_dist/",
    "migrate": "../umbraco/nitrogen.web/assets",
    "html": {
      "source": "./src/html",
      "filter": "/**/*.njk",
      "templatingFilter": "/**/{components,layouts,shared,macros,data}/**",
      "data": "./src/html/data/data.json"
    },
    "javascripts": {
      "source": "./src/js",
      "filter": "/**/*.+(js)",
      "destination": "js"
    },
    "css": {
      "source": "./src/scss",
      "filter": "/**/*.+(scss)",
      "destination": "css"
    },
    "images": {
      "source": "./src/images",
      "filter": "/**/*.+(png|jpg|jpeg|gif|svg)",
      "destination": "images"
    },
    "fonts": {
      "source": "./src/fonts",
      "filter": "/**/*.+(ttf|otf|woff|woff2|eot|svg)",
      "destination": "fonts"
    }
  }
}
